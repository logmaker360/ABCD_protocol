<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/achtergrond">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:padding="25dp">

        <TextView
            android:id="@+id/tvExposure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textColor="#808"/>

        <TextView
            android:textColor="#808"
            android:id="@+id/tvExposureAmbulance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvUitlegOpnieuwABCDExposure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textColor="#808"/>

        <Button
            android:id="@+id/btopnieuwABCDExposure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opnieuw ABCD controleren." />

        <TextView
            android:id="@+id/tvExposureMeerInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#808" />

        <Button
            android:id="@+id/btnaarMenuEinde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu" />

    </LinearLayout>

</ScrollView>