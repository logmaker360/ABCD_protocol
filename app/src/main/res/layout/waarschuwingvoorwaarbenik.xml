<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/achtergrond" >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="25dp">

    <Button
        android:id="@+id/btTerug_naar_Alarmeren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terug" />

    <TextView
        android:id="@+id/tvWaarschuwing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#808" />
    <Button
        android:id="@+id/btNaarLocatieZoeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ja ik wil verder om mijn locatie te bepalen." >
    </Button>
    <TextView
        android:id="@+id/tvDoorgaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#808"/>

</LinearLayout>

</ScrollView>